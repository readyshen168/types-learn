{
    "compilerOptions": {
        "baseUrl": "./src",
        "paths": {
            "@utils/*": ["./utils/*"],
            "@/*": ["./*"]
        },
        "outDir": "dist",
        "noEmitOnError": true,
        "target": "es5",
        "lib": ["ES2015", "DOM"],
        "esModuleInterop": true,
        "strict": true,
        "types": ["jest"]  // 包含Jest类型定义
    },
    "include": [
        "src/**/*",
        "src/__tests__/**/*"  // 包含测试文件
    ],
    "exclude": ["node_modules", "dist"]
}