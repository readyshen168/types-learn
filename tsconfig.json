{
    "compilerOptions": {
        "baseUrl": "./src",
        "paths": {
            //"@utils/*": ["./utils/*"],
            "@utils": ["./utils"],
            "@/*": ["./*"],
            "@data-structures/*":["./data-structures/*"],
            "@data-structures":["./data-structures"],
        },
        "outDir": "dist",
        "noEmitOnError": true, // 如果TypeScript编译过程中出现错误，将不会生成JavaScript文件
        "target": "es5",
        "lib": ["ES2015", "DOM"],
        "esModuleInterop": true,
        "strict": true,
        "types": ["jest"]  // 包含Jest类型定义
    },
    "include": [
        "src/**/*",
        "src/__tests__/**/*"  // 包含测试文件
    ],
    "exclude": ["node_modules", "dist"]
}